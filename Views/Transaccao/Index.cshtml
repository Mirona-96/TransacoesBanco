@model IEnumerable<TransacoesBanco.Models.Transaccao>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>Caderneta</h1>


        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroConta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TitularConta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataTransaccao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Montante)
                    </th>

                    <th>
                        <a asp-action="AddOrEdit" class="btn btn-sm btn-success">
                            <i class="fa-solid fa-plus"></i> Novo
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroConta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TitularConta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataTransaccao)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Montante)
                        </td>

                        <td>
                            <form asp-action="Delete" asp-route-id="@item.TransaccaoId">
                                <div class="btn btn-group btn-group-sm">
                                    <a asp-action="AddOrEdit" asp-route-id="@item.TransaccaoId" class="btn btn-warning">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Pretende eliminar esta transacção?')">
                                        <i class="far fa-trash-alt"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

